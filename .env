NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/trend_radar?schema=public&options=-c%20TimeZone%3DUTC

# GDELT
GDELT_QUERY=(thailand OR ไทย OR กรุงเทพ)
GDELT_MAXRECORDS=50

# X Trendlist
X_TRENDLIST_URL=https://getdaytrends.com/thailand/

# --- Ingest scheduling / throttling ---
INGEST_ENABLED=true
INGEST_INTERVAL_SEC=300
INGEST_TIMEOUT_MS=25000

# --- GDELT tuning ---
GDELT_MAXRECORDS=50
GDELT_LOOKBACK_HOURS=24
GDELT_RETRY=2

# --- Trendlist tuning ---
X_TRENDLIST_URL=https://getdaytrends.com/thailand/
X_TRENDLIST_LOOKBACK_HOURS=24
X_TRENDLIST_RETRY=2

# --- Forecast / scoring ---
FORECAST_WINDOW_HOURS=24
FORECAST_GRACE_MINUTES_LAST_BUCKET=20